#!/bin/bash

playerctl pause

background="{{base00-hex}}"
foreground="{{base05-hex}}"
wrong="{{base08-hex}}"
verif="{{base0D-hex}}"

i3lock \
    --color="#$background" \
    --inside-color="#${background}FF" \
    --insidever-color="#${verif}FF" \
    --insidewrong-color="#${wrong}FF" \
    --ring-color="#${background}FF" \
    --ringver-color="#${verif}FF" \
    --ringwrong-color="#${wrong}FF" \
    --line-color="#${foreground}FF" \
    --keyhl-color="#${foreground}FF" \
    --bshl-color="#${wrong}FF" \
    --separator-color="#${background}FF" \
    --verif-color="#${verif}FF" \
    --wrong-color="#${wrong}FF" \
    --layout-color="#${foreground}FF" \
    --time-color="#${foreground}FF" \
    --date-color="#${foreground}FF" \
    --ind-pos='x+100:h-100' \
    --time-pos='ix+(36+20):iy+12' \
    --time-align=1 \
    --time-str='%H:%M' \
    --date-str='' \
    --date-font='Fira Mono' \
    --time-font='Fira Mono' \
    --time-size=36 \
    --radius=36 \
    --ring-width=4 \
    --verif-text='' \
    --wrong-text='' \
    --noinput-text='' \
    --lock-text='' \
    --lockfailed-text='' \
    --indicator \
    --ignore-empty-password \
    --clock
