#!/usr/bin/env bash

playerctl pause

i3lock \
    --color='#282828' \
    --insidecolor='#282828FF' \
    --insidevercolor='#FABD2FFF' \
    --insidewrongcolor='#FB4934FF' \
    --ringcolor='#282828FF' \
    --ringvercolor='#282828FF' \
    --ringwrongcolor='#282828FF' \
    --linecolor='#EBDBB2FF' \
    --keyhlcolor='#EBDBB2FF' \
    --bshlcolor='#FB4934FF' \
    --separatorcolor='#282828FF' \
    --verifcolor='#00000000' \
    --wrongcolor='#00000000' \
    --layoutcolor='#00000000' \
    --timecolor='#EBDBB2FF' \
    --datecolor='#00000000' \
    --indpos='x+100:h-100' \
    --timepos='ix+(r+20):iy+12' \
    --time-align=1 \
    --timestr='%H:%M' \
    --time-font='Fira Mono' \
    --timesize=36 \
    --radius=36 \
    --ring-width=4 \
    --veriftext='' \
    --wrongtext='' \
    --noinputtext='' \
    --locktext='' \
    --lockfailedtext='' \
    --indicator \
    --ignore-empty-password \
    --clock
