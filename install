#!/bin/bash
DIR=$(readlink -f "$(dirname "$0")")
INSTALLATION="$HOME/.dfiles"
BRANCH="installation"

cd "$DIR" || exit 1

git branch "$BRANCH" 2> /dev/null
git worktree add "$INSTALLATION" "$BRANCH"
cd "$INSTALLATION" || exit 1

for d in $(ls -d */); do
  dir=$(echo "$d" | head -c -2)
  stow -t "$HOME" -S "$dir"
done

